@model MusicIdentificationSystem.AdminLTE.Models.Account.AccountModel

@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    ViewBag.Title = ViewBag.Title = Resources.Resources.Account_Title_EditAccount;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Account-form" }))
{
<div class="row">
    <hr class="thicker" />
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="container-fluid">
            <div class="pull-left">
                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("AccountXStreamStationStatusList", "Dashboard", new { accountId = Model.Id })'">@Resources.Resources.Account_Button_Dashboard</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("AccountTimeReport", "Reports", new { accountId = Model.Id })'">@Resources.Resources.Account_Button_AccountTimeReport</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("CreateFingerprintList", "CreateFingerprint", new { accountId = Model.Id })'">@Resources.Resources.Account_Button_CreateFingerprints</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("AccountXTrackList", "Track", new { accountId = Model.Id })'">@Resources.Resources.Account_Button_AccountTrackList</button>
                <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("AccountXStreamStationList", "StreamStation", new { accountId = Model.Id })'">@Resources.Resources.Account_Button_AccountStreamStationList</button>
            </div>
            <div class="pull-right">
                <a href="@Url.Action("List", "Account")" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="@Resources.Resources.Global_Button_Back">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                    @Resources.Resources.Global_Button_Back
                </a>
                @*@if (Model.HasAdminAccess || Model.HasCreateAccess)
            {*@
                <input type="submit" name="save" value="@Resources.Resources.Global_Button_Save" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="@Resources.Resources.Global_Button_Save" />
                <input type="submit" name="save-continue" value="@Resources.Resources.Global_Button_SaveContinue" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="@Resources.Resources.Global_Button_SaveContinue" />
            </div>
        </div>
    </div>
</div>
    <br>
    @Html.Partial("_CreateOrUpdateAccount", Model)
}
