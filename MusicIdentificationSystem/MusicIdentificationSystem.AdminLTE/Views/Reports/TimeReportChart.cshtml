@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    ViewBag.Title = ViewBag.AccountName != null ? ViewBag.AccountName + " - " + Resources.Resources.Reports_Title_TimeReport : Resources.Resources.Reports_Title_TimeReport;
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Check = true;
